<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToeMAUIApp.MainPage"
             Title="Tic-Tac-Toe MAUI">

    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*,*" Padding="20">
        <Button Grid.Row="0" Grid.Column="0" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_0_0"/>
        <Button Grid.Row="0" Grid.Column="1" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_0_1"/>
        <Button Grid.Row="0" Grid.Column="2" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_0_2"/>
        <Button Grid.Row="1" Grid.Column="0" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_1_0"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_1_1"/>
        <Button Grid.Row="1" Grid.Column="2" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_1_2"/>
        <Button Grid.Row="2" Grid.Column="0" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_2_0"/>
        <Button Grid.Row="2" Grid.Column="1" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_2_1"/>
        <Button Grid.Row="2" Grid.Column="2" Margin="2" Clicked="OnButtonClicked" FontSize="72" x:Name="Button_2_2"/>
    </Grid>

</ContentPage>
